

<%= form_with(model: gcard) do |form| %>
  <% if gcard.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
      <p><%= pluralize(gcard.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>

      <div class="message-body">
        <ul>
          <% gcard.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :amount, class: "label" %>
    <%= form.number_field :amount, step: 100, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :email, class: "label" %>
    <%= form.text_field :email, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :description, class: "label" %>
    <%= form.text_field :description, class: "input" %>
  </div>


  <div class="actions">
    <%= form.submit class: "button is-success" %>
  </div>
<% end %>